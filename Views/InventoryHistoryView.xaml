<UserControl x:Class="InventoryPro.Views.InventoryHistoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <StackPanel Grid.Row="0" Margin="0,0,0,12">
            <TextBlock Text="Inventory History"
                       FontSize="24"
                       FontWeight="Bold"/>
            <TextBlock Text="Track all inventory additions by date and BOL number"
                       Foreground="Gray"/>
        </StackPanel>

        <!-- HISTORY TABLE -->
        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding History}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  HeadersVisibility="Column"
                  GridLinesVisibility="All">

            <DataGrid.Columns>

                <!-- BOL NUMBER -->
                <DataGridTextColumn Header="BOL"
                        Binding="{Binding BOLNumber}"
                        Width="120"/>

                <DataGridTextColumn Header="SKU"
                        Binding="{Binding SKU}"
                        Width="100"/>

                <DataGridTextColumn Header="Product"
                        Binding="{Binding ProductName}"
                        Width="*"/>

                <DataGridTextColumn Header="Warehouse"
                        Binding="{Binding Warehouse}"
                        Width="140"/>

                <DataGridTextColumn Header="Qty Added"
                        Binding="{Binding QtyAdded}"
                        Width="100"/>

                <!-- FIX: Use Binding with StringFormat inside DataGridTextColumn.ElementStyle -->
                <DataGridTextColumn Header="Time"
                        Width="160">
                    <DataGridTextColumn.Binding>
                        <Binding Path="Time" StringFormat="g"/>
                    </DataGridTextColumn.Binding>
                </DataGridTextColumn>

            </DataGrid.Columns>

        </DataGrid>
    </Grid>
</UserControl>
